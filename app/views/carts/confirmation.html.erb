<h2>Confirmaci√≥n Pedido</h2>

<div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">

  <%= render 'address_info' %>

  <br>
  <br>

  <div class="cart-row">
    <h3>Productos</h3>
  </div>

  <% if @order_items.size == 0 %>
    <p class="text-center">
      No hay productos en el carro de compras.  Dirijase a <%= link_to "Tienda", shop_path %> y agrega los productos que desees.
    </p>
  <% else %>
    <% @order_items.each do |order_item| %>
      <div class="cart-row">
        <div class="cart-row-content">
          <%= render 'carts/cart_row', product: order_item.product, order_item: order_item, show_total: true %>
        </div>
      </div>
    <% end %>

    <br>

    <div class="center">
      <%= form_for(current_order, url: confirm_path) do |f| %>
        <%= f.submit "Confirmar", class: "btn btn-primary" %>
      <% end %>
    </div>

  <% end %>
</div>
